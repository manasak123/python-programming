n=float(input("enter the number of new louves ordered"))
o=float(input("enter the number of old louves ordered"))
a=185
re="{:.2f}".format(a)
print("the regular price for the new loaf is ",re)
b=185*n
tp="{:.2f}".format(b)
print("the total price for the new loaf is",tp)
d=185*0.6
c=d*o
old="{:.2f}".format(c)
print("the total price for the old loaf is",old)
print("total is :")
total=c+b
e="{:.2f}".format(total)
print(e)
